<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#FAE490"
    android:clickable="true"
    tools:ignore="TouchTargetSizeCheck">

    <TextView
        android:id="@+id/namaPelangganList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Nama"
        android:textColor="#724100"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tglList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaPelangganList"
        android:layout_marginStart="10dp"
        android:text="00:00 15-05-2023"
        android:textColor="#724100" />

    <TextView
        android:id="@+id/statusList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:text="Belum Dibayar"
        android:textColor="#724100"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mejaList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusList"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:text="Meja 13"
        android:textColor="#724100" />

</RelativeLayout>