<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:background="#FAE490">

    <TextView
        android:id="@+id/namaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Item"
        android:textColor="#724100"
        android:textSize="20sp"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/hargaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp."
        android:textColor="#724100"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_below="@id/namaItem"/>

    <ImageButton
        android:id="@+id/buttonSubstract"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_toLeftOf="@id/txtJumlah"
        android:background="@drawable/ic_baseline_remove_24"/>
    <TextView
        android:id="@+id/txtJumlah"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_toLeftOf="@id/buttonAdd"
        android:text="0"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/buttonAdd"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_baseline_add_24"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@id/hargaItem"/>
</RelativeLayout>